<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/shape_header_view_gradient"
    android:gravity="bottom"
    android:paddingStart="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/Theme.WaterMonitoringSystem">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture_nav_header"
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/logo_app" />

    <TextView
        android:id="@+id/user_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:paddingStart="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text_default"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/email_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_nav_header"
        android:layout_alignStart="@+id/user_nav_header"
        android:paddingStart="@dimen/nav_header_vertical_spacing"
        tools:ignore="RtlSymmetry" />

</RelativeLayout>
