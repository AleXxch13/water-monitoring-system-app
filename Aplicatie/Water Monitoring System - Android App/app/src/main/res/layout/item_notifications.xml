<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutItemNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingTop="13dp"
    android:paddingEnd="8dp"
    android:paddingBottom="13dp">

    <LinearLayout
        android:id="@+id/secondsNotificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/notif_customer_full_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/notif_timestamp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="end"
            android:textColor="@color/colorAccent"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/notif_subject_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/notif_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/notif_id"
            android:layout_width="1dp"
            android:layout_height="1dp" />

    </LinearLayout>
</LinearLayout>
