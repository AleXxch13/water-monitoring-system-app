<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clientDashboardFrameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="55dp"
    android:background="@drawable/background5"
    android:orientation="vertical">

    <ListView
        android:id="@+id/customer_sensors_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:divider="@color/text_default"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false"
        android:listSelector="@color/list_colors_when_pressed"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_customer_sensor_request"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_button_gradient_blue_black"
            android:fontFamily="@font/font_roboto_regular"
            android:text="@string/sensor_request"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>
